{
  "dashboard": {
    "title": "Kafka Streaming - Event Processing",
    "tags": ["obi", "kafka", "example", "streaming"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Message Rate (msgs/s)",
        "targets": [
          {
            "expr": "sum(rate(kafka_messages_consumed_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "Consumed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "msgs",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Processing Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(kafka_processing_errors_total{service=\"kafka-streaming\"}[5m])) / sum(rate(kafka_messages_consumed_total{service=\"kafka-streaming\"}[5m])) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Processing Latency (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(kafka_processing_duration_seconds_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "type": "gauge",
        "title": "Consumer Lag",
        "targets": [
          {
            "expr": "kafka_consumer_lag{service=\"kafka-streaming\"}",
            "legendFormat": "Messages Behind",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 10000,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "timeseries",
        "title": "Message Throughput (Produce vs Consume)",
        "targets": [
          {
            "expr": "sum(rate(kafka_messages_produced_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "Produced",
            "refId": "A"
          },
          {
            "expr": "sum(rate(kafka_messages_consumed_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "Consumed",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "msgs",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "timeseries",
        "title": "Processing Latency Distribution (p50, p95, p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(kafka_processing_duration_seconds_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(kafka_processing_duration_seconds_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(kafka_processing_duration_seconds_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "type": "timeseries",
        "title": "Consumer Lag Over Time",
        "targets": [
          {
            "expr": "sum by (topic, partition) (kafka_consumer_lag{service=\"kafka-streaming\"})",
            "legendFormat": "{{topic}}-{{partition}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "type": "timeseries",
        "title": "Processing Errors by Type",
        "targets": [
          {
            "expr": "sum by (error_type) (rate(kafka_processing_errors_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "errors/s",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 30
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "type": "timeseries",
        "title": "Consumer Group Rebalances",
        "targets": [
          {
            "expr": "sum(rate(kafka_consumer_rebalances_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "Rebalances",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "events/s",
            "color": {"mode": "fixed", "fixedColor": "orange"},
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "fillOpacity": 50
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "bargauge",
        "title": "Top Topics by Message Count",
        "targets": [
          {
            "expr": "topk(10, sum by (topic) (rate(kafka_messages_consumed_total{service=\"kafka-streaming\"}[5m])))",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "msgs",
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "piechart",
        "title": "Message Processing Status Distribution",
        "targets": [
          {
            "expr": "sum by (status) (rate(kafka_messages_processed_total{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "msgs"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "type": "timeseries",
        "title": "Partition Offsets",
        "targets": [
          {
            "expr": "kafka_partition_current_offset{service=\"kafka-streaming\"}",
            "legendFormat": "{{topic}}-{{partition}} current",
            "refId": "A"
          },
          {
            "expr": "kafka_partition_high_watermark{service=\"kafka-streaming\"}",
            "legendFormat": "{{topic}}-{{partition}} watermark",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "fillOpacity": 0
            }
          }
        }
      },
      {
        "id": 13,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "type": "timeseries",
        "title": "Batch Processing Sizes",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(kafka_batch_size_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p50 batch size",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(kafka_batch_size_bucket{service=\"kafka-streaming\"}[5m]))",
            "legendFormat": "p95 batch size",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "topic",
          "type": "query",
          "query": "label_values(kafka_messages_consumed_total{service=\"kafka-streaming\"}, topic)",
          "label": "Topic",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "partition",
          "type": "query",
          "query": "label_values(kafka_messages_consumed_total{service=\"kafka-streaming\"}, partition)",
          "label": "Partition",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "consumer_group",
          "type": "query",
          "query": "label_values(kafka_consumer_lag{service=\"kafka-streaming\"}, consumer_group)",
          "label": "Consumer Group",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
