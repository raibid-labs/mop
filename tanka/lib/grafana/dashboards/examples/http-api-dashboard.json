{
  "dashboard": {
    "title": "HTTP REST API - Product Catalog",
    "tags": ["obi", "http", "example", "product-catalog"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Request Rate (RPS)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"http-api\"}[5m]))",
            "legendFormat": "RPS",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"http-api\",status_code=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total{service=\"http-api\"}[5m])) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Average Latency (p50)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"http-api\"}[5m]))",
            "legendFormat": "p50 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "type": "gauge",
        "title": "Success Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"http-api\",status_code=~\"2..\"}[5m])) / sum(rate(http_requests_total{service=\"http-api\"}[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "timeseries",
        "title": "Request Rate by Method",
        "targets": [
          {
            "expr": "sum by (method) (rate(http_requests_total{service=\"http-api\"}[5m]))",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "timeseries",
        "title": "Latency Distribution (p50, p95, p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"http-api\"}[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"http-api\"}[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"http-api\"}[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "type": "timeseries",
        "title": "Slow Requests (>1s)",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_bucket{service=\"http-api\",le=\"+Inf\"}[5m])) - sum(rate(http_request_duration_seconds_bucket{service=\"http-api\",le=\"1\"}[5m]))",
            "legendFormat": "Slow Requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 30
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "type": "timeseries",
        "title": "Rate Limiting Events (429)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"http-api\",status_code=\"429\"}[5m]))",
            "legendFormat": "Rate Limited",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "fixed", "fixedColor": "red"},
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "fillOpacity": 50
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "type": "timeseries",
        "title": "Concurrent Connections",
        "targets": [
          {
            "expr": "http_requests_in_flight{service=\"http-api\"}",
            "legendFormat": "In Flight",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "bargauge",
        "title": "Top 10 Endpoints by Request Count",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{service=\"http-api\"}[5m])))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "piechart",
        "title": "Status Code Distribution",
        "targets": [
          {
            "expr": "sum by (status_code) (rate(http_requests_total{service=\"http-api\"}[5m]))",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "endpoint",
          "type": "query",
          "query": "label_values(http_requests_total{service=\"http-api\"}, endpoint)",
          "label": "Endpoint",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "status_code",
          "type": "query",
          "query": "label_values(http_requests_total{service=\"http-api\"}, status_code)",
          "label": "Status Code",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
