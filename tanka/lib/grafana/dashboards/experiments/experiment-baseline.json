{
  "dashboard": {
    "id": null,
    "uid": "exp-baseline-001",
    "title": "OBI Experiment - Baseline Metrics",
    "description": "Baseline performance and cost metrics for OBI experiments",
    "tags": ["obi", "experiments", "baseline", "cost-optimization"],
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "type": "graph",
        "title": "Ingestion Rate vs Cost",
        "datasource": "Mimir",
        "targets": [
          {
            "expr": "rate(mimir_ingester_ingested_samples_total[5m])",
            "legendFormat": "Ingestion Rate",
            "refId": "A"
          },
          {
            "expr": "(rate(mimir_ingester_ingested_samples_total[5m]) / 1000000) * 0.5",
            "legendFormat": "Cost (USD/hr)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100000, "color": "yellow"},
                {"value": 500000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "type": "stat",
        "title": "Monthly Cost Projection",
        "datasource": "Mimir",
        "targets": [
          {
            "expr": "sum(mimir_blocks_storage_bytes) * 0.023 / 1e9 * 730 + (avg(rate(mimir_ingester_ingested_samples_total[1h])) / 1000000 * 0.5 * 730)",
            "legendFormat": "Total Monthly Cost",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 3000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "type": "heatmap",
        "title": "Query Latency Heatmap",
        "datasource": "Mimir",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(mimir_query_duration_seconds_bucket[5m])))",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {
            "unit": "s"
          },
          "color": {
            "scheme": "Oranges"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 8},
        "type": "timeseries",
        "title": "Resource Utilization",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"mop-system\"}[5m])) by (pod)",
            "legendFormat": "CPU - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "avg(container_memory_usage_bytes{namespace=\"mop-system\"}) by (pod) / 1024 / 1024 / 1024",
            "legendFormat": "Memory (GB) - {{pod}}",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 8},
        "type": "gauge",
        "title": "Data Reduction Efficiency",
        "datasource": "Mimir",
        "targets": [
          {
            "expr": "1 - (sum(rate(mimir_ingester_ingested_samples_total[5m])) / sum(rate(obi_generated_samples_total[5m])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.3, "color": "yellow"},
                {"value": 0.6, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
        "type": "table",
        "title": "Cost Breakdown by Component",
        "datasource": "Mimir",
        "targets": [
          {
            "expr": "topk(10, sum by (component) ((rate(mimir_ingester_ingested_samples_total[1h]) / 1000000 * 0.5) + (mimir_blocks_storage_bytes * 0.023 / 1e9)))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Mimir",
            "value": "mimir"
          }
        },
        {
          "name": "experiment",
          "type": "custom",
          "query": "baseline,sampling,compaction,scaling",
          "current": {
            "text": "baseline",
            "value": "baseline"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Loki",
          "enable": true,
          "expr": "{job=\"experiments\"} |= \"EXPERIMENT_START\"",
          "name": "Experiment Start",
          "tagKeys": "experiment_id",
          "textFormat": "Experiment {{experiment_id}} started"
        }
      ]
    }
  }
}